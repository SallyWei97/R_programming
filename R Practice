# Exercise2 泊松分布直方图
edf1 <- rpois(100,2) # 产生泊松分布的随机数
edf2 <- rpois(100000,2)

mass1 <- ggplot()+ geom_bar(aes(x = edf1,y = stat(count)/sum(count)))+ xlim(0,10) + ylim(0,0.4)
mass1

mass2 <- ggplot()+ geom_bar(aes(x = edf2,y = stat(count)/sum(count)))+ xlim(0,10) + ylim(0,0.4)
mass2

