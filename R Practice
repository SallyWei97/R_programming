# Example
library(ggplot2)
set.seed(34643) # 固定生成的随机数
x<- 0:10
fx <- dpois(x,2) # 泊松分布密度
mass<-ggplot()+ geom_bar(mapping=aes(x=x, y=fx), stat="identity") + xlim(0,10) + ylim(0,0.4)
# geom_bar 绘制柱状图；aes 映射函数；xlim/ylim xy轴长度
mass

